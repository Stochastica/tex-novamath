% Intervallum:
% Discrētum (Integrum):    \ival[i]{a}{b} dat [[a..b]]
% Discrētum radiāns:       \ival[ir]{a} dat [a..]
% Clausum:                 \ival{a}{b} dat [a,b]
% Apertum:                 \ival[a]{a}{b} dat ]a,b[
% Laevum semi-apertum:     \ival[al]{a}{b} dat ]a,b]
% Dextrum semi-apertum:    \ival[ad]{a}{b} dat [a,b[
% Clausum laevum radiāns:  \ival[rl]{a} dat [a,->]
% Clausum dextrum radiāns: \ival[rd]{a} dat [<-,a]
% Apertum laevum radiāns:  \ival[ral]{a} dat ]a,->]
% Apertum dextrum radiāns: \ival[rad]{a} dat [<-,a[
\NewDocumentCommand \ival {o g g} % Intervallum
{
	\IfValueTF{#1}
	{
		\IfStrEqCase{#1}
		{
			{i}{\left\llbracket #2 \mathinner{\ldotp\ldotp} #3 \right\rrbracket}
			{ir}{\left\llbracket #2 \mathinner{\ldotp\ldotp}\!\!\rightarrow
				\right\rrbracket}
			{a}{\left] #2, #3 \right[}
			{al}{\left] #2, #3 \right]}
			{ad}{\left[ #2, #3 \right[}
			{rl}{\left[ #2, \rightarrow\right]}
			{rd}{\left[\leftarrow, #2\right]}
			{ral}{\left] #2, \rightarrow \right]}
			{rad}{\left[\leftarrow, #2\right[}[]
		}
	}{
		\left[ #2, #3 \right]
	}
}

